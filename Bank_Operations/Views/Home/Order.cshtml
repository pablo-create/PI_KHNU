
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div>
        <h3>Форма оформлення кредиту</h3> 
        <form method="post"> 
        <input type="hidden" value="@ViewBag.CreditId" name="CreditId" />
        <table>
            <tr>
                <td><p>Введіть своє ім'я </p></td>
                <td><input type="text" name="Person" /> </td>
            </tr>
            <tr>
                <td><p>Введіть адресу :</p></td>
                <td> <input type="text" name="Address" /> </td>
            </tr>
            <tr>
                <td><p>Введіть суму кредиту :</p></td>
                <td> <input type="text" name="Quantity" /> </td>
            </tr>
            <tr>
                <td><p>Введіть кількість днів :</p></td>
                <td> <input type="text" name="Days" /> </td>
            </tr>
            <tr>
                <td><input type="submit" value="Відправити" /> </td>
                <td></td>
            </tr>
        </table> 
        </form>
    </div>
